[colors]
background     = #2e3440
background-alt = #3b4252
foreground     = #d8dee9
foreground-alt = #4c566a

dark   = #3b4252
light  = #d8dee9

primary   = #99c1f1
alert     = #ffa348
warning   = #ed333b

[bar/main]
width = 100%
height = 30
radius = 0
fixed-center = true

background = #232729
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

line-size = 0

module-margin-left = 1
module-margin-right = 2

font-0 = "Roboto:pixelsize=10;2"
font-1 = "Roboto:pixelsize=10:style=Bold;2"
font-2 = "Iosevka Nerd Font:size=14;3"

modules-left = bspwm title
modules-center = date
modules-right = pulseaudio keyboard wlan cpu memory eth

tray-position = right
tray-padding = 1
;tray-background = ${colors.light}
tray-maxsize = 24

separator = "|"
separator-padding = 1

wm-restack = bspwm
#override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/rofi]
type = custom/script
exec = echo " 異  Launcher"
click-left = rofi -show drun -show-icons
format-underline = ${colors.au2}

[module/title]
type = internal/xwindow
format-foreground = ${colors.foreground}
format-underline = ${colors.fr1}
format-padding = 4

label-maxlen = 40
label-empty = Desktop

[module/keyboard]
type = internal/xkeyboard

format = <label-layout> <label-indicator>

layout-icon-default = some-icon
layout-icon-0 = us;US
layout-icon-1 = ru;RU

blacklist-0 = num lock
blacklist-1 = scroll lock

format-prefix = "     "
format-prefix-foreground = ${colors.primary}
format-prefix-underline = ${colors.secondary}

label-layout = %icon%

label-indicator-padding = 2
label-indicator-margin = 1

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.primary}
label-focused-foreground = ${colors.foreground-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = 
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/cpu]
type = internal/cpu
interval = 1

format = <ramp-load> <label> 
format-underline = ${colors.fr4} 

ramp-load-font = 2
ramp-load-0 = CPU
ramp-load-0-foreground = ${colors.primary}

ramp-load-1 = CPU
ramp-load-1-foreground = ${colors.warning}

ramp-load-2 = CPU
ramp-load-2-foreground = ${colors.au1}

[module/memory]
type = internal/memory
interval = 2

format-underline = ${colors.fr4}

format = <ramp-used> <label> 
label  = %percentage_used%% 

ramp-used-font = 2
ramp-used-0 = RAM
ramp-used-0-foreground = ${colors.primary}
ramp-used-1 = RAM
ramp-used-1-foreground = ${colors.warning}
ramp-used-2 = RAM
ramp-used-2-foreground = ${colors.au1}

[module/wlan]
type = internal/network
interface = wlp7s0
interval = 2.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.fr2}
label-connected = "    %essid% (%signal%%)"

format-disconnected =

ramp-signal-0 =   
ramp-signal-1 =   
ramp-signal-2 =   
ramp-signal-3 =   
ramp-signal-4 =   
ramp-signal-foreground = ${colors.primary}

[module/eth]
type = internal/network
interface = enp9s0
interval = 3.0

format-connected-underline = ${colors.fr2}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 1.0
date = "%a, %B %e    %H:%M"

format = <label>
label-font = 2

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume>   <label-volume>
format-volume-underline = ${colors.au5}

label-muted = ﱝ   MUTED
label-muted-foreground = ${colors.warning}
label-muted-underline = ${colors.warning}

ramp-volume-0 =  
ramp-volume-1 =  
ramp-volume-2 =  

ramp-volume-foreground = ${colors.primary}

[settings]
screenchange-reload = true

