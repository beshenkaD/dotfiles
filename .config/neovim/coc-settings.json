{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true,
                "analyses": {
                    "unreachable": true,
                    "unusedparams": true,
                    "staticcheck": true,
                    "fieldalignment": true,
                    "nilness": true,
                    "shadow": true
                }
            }
        }
    }
}
